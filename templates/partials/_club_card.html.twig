<div class="card-club card-club-back d-flex box-shadow">
    <a class='link' href="{{ path('app_club_show', {'id': club.id}) }}"></a>
    <div class="card-title-club">
        <p>CLUB</p>
    </div>
    <div class="card-image col-4 d-flex justify-content-center">
        <img class="img50" src="{{ asset('uploads/images/' ~ club.logo) }}" alt="Logo du club">
    </div>
    <div class="card-content col-8">

        <h2 class="card-text">{{ club.name }}</h2>
        <p><span class="fw-bolder">Téléphone : </span>{{ club.phone }}</p>
        <p><span class="fw-bolder">Adresse : </span> {{ club.adress }}</p>
        <p><span class="fw-bolder">Nombres d'équipes : </span> {{ club.team | length }}</p>

        {% if is_granted('ROLE_MANAGER') %}
        <p>
            <a class="z-1 position-absolute custom-btn"
               href="{{ path('app_club_edit', {'id': club.id}) }}">Modifier</a>
        </p>
        {% endif %}

    </div>
</div>



