<div class="card-club card-team-back d-flex flex-column box-shadow">
    <div class="card-image d-flex justify-content-center mb-3">
        <img src="{{ asset('uploads/images/' ~ team.photo) }}" alt="Logo du club">
    </div>
    <div class="card-content">

        <h2 class="card-text">{{ player.firstname }}</h2>
        <h2 class="card-text text-uppercase">{{ player.lastname }}</h2>
        <p>Joueur</p>
        <p>Poste : XXX </p>
        <p>Age : XXX</p>

        <div class="d-flex justify-content-between">

            <a class="custom-btn-light" href="{{ path('app_user_show', {'id': player.id}) }}">Profil</a>

            {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_COACH') %}
                <a class="custom-btn-light" href="{{ path('app_user_edit', {'id': player.id}) }}">Modifier</a>
            {% endif %}

        </div>
    </div>
</div>