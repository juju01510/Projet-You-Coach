{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block main %}

    {% for message in app.flashes('success') %}
        <div class="d-flex justify-content-center align-items-center">
            <div class="col-lg-10 col-sm-12 alert alert-success">
                {{ message }}
            </div>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-center align-items-center flex-grow-1">
        <div class="col-lg-10 col-sm-12 block-form box-shadow">
            <h1 class="mb-3">Mon compte</h1>
            {{ form_start(form) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.email, {
                'attr' : {'placeholder': 'Email'}
            }) }}
            {{ form_row(form.roles) }}
            {{ form_row(form.team) }}
            {#            {{ form_row(form.plainPassword) }} #}
            <div class="d-flex justify-content-between mt-5">
                {#                {{ form_row(form.agreeTerms, { #}
                {#                    label: 'Accepter les conditions' #}
                {#                }) }} #}
                <button type="submit" class="custom-btn">Valider</button>
                {{ include('user/_delete_form.html.twig') }}

            </div>
            {{ form_end(form, {'render_rest': false}) }}
            {#            {{ include('user/_form.html.twig', {'button_label': 'Valider'}) }} #}
            {#            <a href="{{ path('app_user_index') }}">back to list</a> #}
            {#            <div class="d-flex justify-content-end mt-3"> #}
            {#            </div> #}
        </div>
    </div>

{% endblock %}
