{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block main %}

    {% for message in app.flashes('success') %}
        <div class="row justify-content-center align-items-center">
            <div class="alert alert-success">
                {{ message }}
            </div>
        </div>
    {% endfor %}

    <div class="bloc">
        <div class="d-flex justify-content-center align-items-center bloc-acceuil">
            <div class="welcome">
                <div>
                    <h2 class="text-center">Bienvenue chez You coach !</h2>
                    <h2 class="text-center my-3 my-sm-5">L'app n°1 pour gérer une équipe ou un club de sport amateur </h2>
                    <p class="text-center">
                        Que vous soyez dirigeant de club ou entraîneur, simplifiez l'organisation et la communication
                        interne de votre groupe de sport amateur.</p>
                </div>
            </div>
            {% if is_granted('ROLE_MANAGER') %}
                {% if app.user.club %}
                {% else %}
                    <a class="d-flex justify-content-center custom-btn w-100 mt-3" href="{{ path('app_club_new') }}">Inscrire mon
                        club</a>
                {% endif %}
            {% endif %}
        </div>
    </div>

{% endblock %}
