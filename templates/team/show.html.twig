{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block main %}

    <div class="d-flex flex-column align-items-center">
        <div class="col-lg-10 col-sm-12 p-2">
            <a href="{{ path('app_club_show', {'id': team.club.id}) }}">Retour</a>
        </div>

        <div class="col-lg-10 col-sm-12 p-2">
            {% include('partials/_team_card.html.twig') %}
        </div>

        <div class="row justify-content-between col-lg-10 col-sm-12 mb-5 p-2">

            {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_COACH') %}
                <a class="new-custom-btn col-lg-3 col-sm-12 text-center box-shadow"
                   href="{{ path('app_user_new') }}">Ajouter un membre</a>
            {% endif %}

            <a class="new-custom-btn col-lg-3 col-sm-12 text-center box-shadow"
               href="{{ path("app_team_trainings", {'id': team.id}) }}">Entrainements</a>
            <a class="new-custom-btn col-lg-3 col-sm-12 text-center box-shadow"
               href="#">Matchs</a>
        </div>

        <div class="d-flex flex-wrap col-lg-10 col-sm-12">
            {% for player in team.player %}
                {% if player.roles[0] == "ROLE_PLAYER" %}
                    <div class="col-lg-2 col-sm-12 p-2">
                        {% include('partials/_player_card.html.twig') %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>

    </div>

{% endblock %}
